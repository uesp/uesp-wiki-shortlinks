name = uesp.wikishortlinks
description = Simple MediaWiki extension for the UESP short link creator.
repository = https://github.com/uesp/uesp-wiki-shortlinks.git
backup = true
verbosity = 0

	# Staging is important as the APC cache randomly breaks if you try to update the files in place.
staged = true

ignore = *.deploy
ignore = .hg*
ignore = .git*

dest = content1.uesp.net:/home/uesp/www/w/extensions/UespShortLinks/
dest = content2.uesp.net:/home/uesp/www/w/extensions/UespShortLinks/
dest = content3.uesp.net:/home/uesp/www/w/extensions/UespShortLinks/

destname = [backup]backup1.uesp.net:/home/uesp/www/w/extensions/UespShortLinks/
destname = [dev]content3.uesp.net:/home/uesp/dev/www/w/extensions/UespShortLinks/

